<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlNormal">@color/accent</item>
        <item name="android:textColorPrimary">@color/text_dark_primary</item>
        <item name="android:textColorSecondary">@color/text_dark_secondary</item>
        <item name="android:textColorTertiary">@color/text_dark_tertiary</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/window_background_light</item>
    </style>

    <style name="LaunchTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/background_launch</item>
    </style>

    <style name="MainTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/window_background_main</item>
    </style>

</resources>